@model IEnumerable<Villa_Web.Dtos.VillaNumberDtos.ReadVillaNumberDto>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary"> VillasNumber List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new Villa Number</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
               
                <th>Villa Name</th>
                <th>Villa Number</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Villa.Name</td>
                    <td>@villa.VillaNo</td>
                   
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villano="@villa.VillaNo" class="btn btn-success btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villano="@villa.VillaNo" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
